@rendermode InteractiveServer

@if (ExpandSubmenu)
{
    <section class="sm:hidden" id="mobile-menu">
        <nav class="space-y-1 pb-3 pt-2">
            <!-- Current: "border-indigo-500 bg-indigo-50 text-indigo-700", Default: "border-transparent text-gray-600 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-800" -->
            <a href="#" class="border-transparent text-gray-600 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-800 block border-l-4 py-2 pl-3 pr-4 text-base font-medium">Dashboard</a>
            <a href="#" class="border-transparent text-gray-600 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-800 block border-l-4 py-2 pl-3 pr-4 text-base font-medium">Brew Guides</a>
            <a href="#" class="border-transparent text-gray-600 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-800 block border-l-4 py-2 pl-3 pr-4 text-base font-medium">Resources</a>
        </nav>
        <article class="border-t border-gray-200 pb-3 pt-4">
            <section class="flex items-center px-4">
                <figure class="flex-shrink-0">
                    <img class="h-10 w-10 rounded-full" src="@UserAvatar" alt="">
                </figure>
                <div class="ml-3">
                    <div class="text-base font-medium text-gray-800">@Name</div>
                    <div class="text-sm font-medium text-gray-500">@Email</div>
                </div>
            </section>
            <nav class="mt-3 space-y-1">
                <a href="#" class="block px-4 py-2 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-800">Your Profile</a>
                <a href="#" class="block px-4 py-2 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-800">Sign out</a>
            </nav>
        </article>
    </section>
}

@code {
    [Parameter] public bool ExpandSubmenu { get; set; }

    private string Name = "First Last";
    private string Email = "example@test.com";
    private string UserAvatar = "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80";

    private bool isDropdownVisible = false;

    private string DropdownClasses => isDropdownVisible
        ? "hidden"
        : "";

    private void ToggleDropdown()
    {
        isDropdownVisible = !isDropdownVisible;
    }

}